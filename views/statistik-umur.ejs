    <!-- header start -->
    <%- include('header'); -%>
        <!-- header end   -->

        <style>
            .nav-link:hover {
                background-color: gray;
            }
        </style>

        <div class="row g-0 mt-5">
            <!-- header start -->
            <%- include('sidebar'); -%>
                <!-- header end   -->
                <div class="col-md-10 p-5 pt-5">
                    <h3><i class="fa-sharp fa-solid fa-cake-candles"></i>&nbsp&nbspSTATISTIK UMUR</h3>
                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button class="btn btn-primary" type="button"><i class="fa-solid fa-chart-column"></i>&nbspUbah
                            grafik</button>
                    </div>
                    <div class="container-fluid " style="width:400px ;">
                        <canvas id="Umur-Chart"></canvas>
                    </div>

                    <!-- First Row -->
                    <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm "
                        cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">No</th>
                                <th scope="col" class="text-center">Kelompok</th>
                                <th scope="col" class="text-center">Klasifikasi</th>
                                <th scope="col" class="text-center">Laki-Laki</th>
                                <th scope="col" class="text-center">Perempuan</th>
                                <th scope="col" class="text-center">Jumlah</th>

                           
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row" class="text-center">1</td>
                                <td scope="row" class="text-center">0-15 Tahun</td>
                                <td scope="row" class="text-center">Bocil</td>
                                <td scope="row" class="text-center">15</td>
                                <td scope="row" class="text-center">4</td>
                                <td scope="row" class="text-center">19</td>
                            </tr>

                            <tr>
                                <td scope="row" class="text-center">2</td>
                                <td scope="row" class="text-center">15-24 Tahun</td>
                                <td scope="row" class="text-center">Alay</td>
                                <td scope="row" class="text-center">3</td>
                                <td scope="row" class="text-center">2</td>
                                <td scope="row" class="text-center">5</td>
                            </tr>

                            <tr>
                                <td scope="row" class="text-center">3</td>
                                <td scope="row" class="text-center">25-34 Tahun</td>
                                <td scope="row" class="text-center">Dewasa</td>
                                <td scope="row" class="text-center">2</td>
                                <td scope="row" class="text-center">4</td>
                                <td scope="row" class="text-center">6</td>
                            </tr>
                        </tbody>
                        
                    </table>
                    <div class="card bg-light ms-md-auto mt-4 border-4 " style="width: 10rem; height: 8rem;">
                        <div class="card-body">
                          <div class="card-body-icon" style="position: absolute; z-index: 0; top: 25px; right: 4px; opacity:0.4 ; font-size: 60px;"><img src="https://img.icons8.com/ios-filled/50/000000/sigma.png"/></div>
                          <h6 class="card-title" style="font-size: 15px ;">TOTAL KESELURUHAN</h6>
                          <div class="display-4" style="font-weight:bold ; font-size:50px ;">2</div>
                        </div>
                    </div>  
                   
                </div>
                
                <!-- footer start -->
                <%- include('footer'); -%>
                    <!-- footer end   -->
                    <script>
                        $(document).ready(function () {
                            $('#dtHorizontalVerticalExample').DataTable({
                                "scrollX": true,
                                "scrollY": 200,
                            });
                            $('.dataTables_length').addClass('bs-select');
                        });
                    </script>

                    <script>
                        const labels = ["0-15 Tahun", "16-24 Tahun", "25-34 Tahun", "35-44 Tahun", "45-54 Tahun", "56-64 Tahun", "65 Tahun keatas"];

                        const data = {
                            labels: labels,
                            datasets: [
                                { 
                                    label: ["0-15 Tahun", ""],
                                    backgroundColor: [
                                        "#62374E",
                                        "#007880",
                                        "#2D4263",
                                        "#ECDBBA",
                                        "#C84B31",
                                        "#1E5128",
                                        "#FFD700",
                                        
                                    ],

                                    data: [0, 0, 0, 0, 0, 0, 0],
                                    hoverOffset: 4,
                                },
                            ],
                        };

                        const config = {
                            type: "bar",
                            data: data,
                            options: {
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Grafik Umur'
                                    }
                                }
                            },
                        };

                        const myChart = new Chart(document.getElementById("Umur-Chart"), config);

                        axios.get('/statistik/statistik/umur').then(e => {
                            console.log(e);
                            myChart.data.datasets[0].data = e.data.data;
                            myChart.update();
                        });

                    </script>

